//单个参数
let func = value => value

let func = function(value){
  return value
}

------------------------------------------------------------------------------------------------
//多个参数
let func = (value, num) => value * num
let func = (value, num) => {
  return value * num
}

------------------------------------------------------------------------------------------------
//直接返回对象

let func = ({value,num}) => ({total: value * num})

var result = func({
  value: 10, 
  num: 10
})

console.log(result) //{total: 100}

------------------------------------------------------------------------------------------------
------------------------------------------------------------------------------------------------
// 箭头函数与普通函数的区别

1.没有this
2.没有arguments
3.不能用new关键字调用
4.没有new.target
5.没有原型
6.没有super
